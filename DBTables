CREATE TABLE  `PerlJams1`.`Song` (
`SongId` CHAR( 36 ) BINARY NOT NULL ,
`MbId` CHAR( 36 ) BINARY NULL ,
`AlbumId` CHAR( 36 ) BINARY NOT NULL ,
`Title` VARCHAR( 255 ) NOT NULL ,
`TrackNum` INT( 5 ) NULL ,
`BitRate` INT( 5 ) NULL ,
`Bpm` INT( 5 ) NULL ,
`URL` VARCHAR( 255 ) NOT NULL ,

CREATE TABLE  `PerlJams1`.`Album` (
`AlbumId` CHAR( 36 ) BINARY NOT NULL ,
`MbId` CHAR( 36 ) BINARY NULL ,
`ArtistId` CHAR( 36 ) BINARY NOT NULL ,
`AlbumYear` DATE NOT NULL ,
`TotalTracks` INT( 5 ) NOT NULL ,
PRIMARY KEY (  `AlbumId` ) ,
UNIQUE (
`MbId` ,


ALTER TABLE  `Album` CHANGE  `AlbumYear`  `AlbumYear` DATE NULL ,
CHANGE  `TotalTracks`  `TotalTracks` INT( 5 ) NULL

