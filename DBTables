`ArtistId` CHAR( 36 ) BINARY NOT NULL ,
`MbId` CHAR( 36 ) BINARY NULL ,
`ArtistName` VARCHAR( 255 ) NOT NULL ,
PRIMARY KEY (  `ArtistId` ) ,
UNIQUE (
`MbId`
)
) ENGINE = MYISAM ;

ALTER TABLE  `Song` ADD  `FileType` VARCHAR( 255 ) NULL AFTER  `URL`

